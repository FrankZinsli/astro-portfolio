---
import Nav from "./Nav.astro";
import { Image, Picture } from '@astrojs/image/components';
import heroImage from '../../assets/hero.jpg';
---
<header>
  <Nav></Nav>
  <div style="width: 300px: height: 300px">
    <Image
      src={heroImage}
      width={300}
      aspectRatio="1:1"
      format={'webp'}
      fit={"cover"}
      alt="descriptive text"
    />
  </div>
  <Picture
    src={heroImage}
    widths={[200, 400, 800]}
    aspectRatio="2:1"
    sizes="(max-width: 800px) 100vw, 800px"
    alt="descriptive text"
    format={"webp"}
  />
</header>